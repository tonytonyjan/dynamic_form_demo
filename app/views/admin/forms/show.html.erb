<table class="table table-striped table-bordered">
  <thead>
    <th>屬性</th>
    <th>值</th>
  </thead>
  <tbody>
    <%= tr_for @admin_form, :id, :title, :description %>
  </tbody>
</table>

<div class="page-header"><h2><%= Field.model_name.human %></h2></div>

<table class="table">
  <thead>
    <tr>
      <%= th_for Field, :name, :type, :required, :multiple, :options %>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @admin_form.fields.each do |field| %>
      <tr>
        <%= td_for field, :name, :type_text, :required, :multiple, :options %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="page-header"><h2><%= Attendee.model_name.human %></h2></div>

<table class="table">
  <thead>
    <tr>
      <%= th_for Attendee, :id, :user, :form %>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @admin_form.attendees.each do |attendee| %>
      <tr>
        <%= td_for attendee, :id, %i[user email] %>
        <td><%= link_to t('crud.show'), admin_form_attendee_path(@admin_form, attendee) %></td>
        <td><%= link_to t('crud.edit'), edit_admin_form_attendee_path(@admin_form, attendee) %></td>
        <td><%= link_to t('crud.destroy'), admin_form_attendee_path(@admin_form, attendee), method: :delete, data: { confirm: t('message.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="btn-group">
  <%= link_to t('crud.edit'), edit_admin_form_path(@admin_form), class: 'btn btn-info btn-lg' %>
  <%= link_to t('action.back'), admin_forms_path, class: 'btn btn-default btn-lg' %>
</div>