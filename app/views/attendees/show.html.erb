<table class="table table-striped table-bordered">
  <tbody>
    <%= tr_for @attendee, :id, %i[user email], %i[form title] %>
    <% @attendee.field_values.each do |field_value| %>
      <tr>
        <td><%= field_value.field.name %></td>
        <td><%= field_value.value_text %></td>
      </tr>
    <% end %>
  </tbody>
</table>