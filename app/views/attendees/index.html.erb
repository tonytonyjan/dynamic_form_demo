<h1>My Attendees</h1>

<%= paginate @attendees %>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <%= th_for Attendee, :id, :user, :form %>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @attendees.each do |attendee| %>
      <tr>
        <%= td_for attendee, :id, %i[user email], %i[form title] %>
        <td><%= link_to t('crud.show'), attendee %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @attendees %>